{% extends 'layout.njk' %}

{% block content %}
  <div class="govuk-body">
    {% from "govuk/components/radios/macro.njk" import govukRadios %}
    {% from "govuk/components/button/macro.njk" import govukButton %}
    {% from "govuk/components/error-message/macro.njk" import govukErrorMessage %}
    {% from "govuk/components/input/macro.njk" import govukInput %}

    <h1 class="govuk-heading-xl">
      Select a land parcel
    </h1>

    <span class="govuk-hint">
      Choose which parcel of land the scheme will apply to. Use the search box to filter the list below.
    </span>

    <form method="POST" action="/parcels">
      {{ govukInput({
        label: {
          text: "Search"
        },
        classes: "govuk-input--width-10",
        id: "parcel-ref-filter",
        name: "parcel-ref-filter"
      }) }}

      {{ govukRadios(model) }}

      {{ govukButton({ text: "Continue" }) }}
    </form>

  </div>
{% endblock %}

{% block bodyEnd %}
  <script src="{{ assetPath }}/javascript/parcels.js"></script>
{% endblock %}
