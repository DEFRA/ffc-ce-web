{% extends 'layout.njk' %}

{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/input/macro.njk" import govukInput %}

{% block content %}
  <div class="govuk-body">
    <h1> Action Inputs </h1>
    <h2> Parcel: {{ model.parcelRef }} </h2>
    <h2> Action: {{ model.actionId }} </h2>
    <form method="get" action="/calculation-result">
      {{ govukInput({
        label: {
          text: "Proposed fence length"
        }
      }) }}
      {{ govukButton({
        text: "Calculate"
      }) }}
    </form>
  </div>
{% endblock %}
