{% extends 'layout.njk' %}

{% set mainClasses = "govuk-main-wrapper--l" %}

{% from "govuk/components/panel/macro.njk" import govukPanel %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      {% if model.eligible %}
        {{ govukPanel(model.panel) }}
      {% else %}
        {{ govukErrorSummary(model.error) }}
      {% endif %}

      <h2 class="govuk-heading-m">Summary</h2>

      <p class="govuk-body">
          {% if model.eligible %}
            You would receive <span class="govuk-label--m">Â£{{ model.payment }}</span>
            for performing action 
            <span class="govuk-!-font-weight-bold">{{model.actionTitle}}</span>
            on land parcel <span class="govuk-!-font-weight-bold">{{model.parcelRef}}</span>
          {% else %}
            Land parcel <span class="govuk-!-font-weight-bold">{{model.parcelRef}}</span> 
            is not eligible for action <span class="govuk-!-font-weight-bold">{{model.actionTitle}}</span>
          {% endif %}
        </span>
      </p>
    </div>
  </div>
{% endblock %}
